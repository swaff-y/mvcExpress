<h2>Search Authors</h2>

<% if(searchOptions) {%>
  <% soName = searchOptions.name %>
<% }%>

<form class="" action="/authors" method="GET">
  <label for="">name</label>
  <input type="text" name="name" value="<%= soName %>">
  <button type="submit" name="button">Search</button>
</form>
<br>
<% authors.forEach(author => { %>
  <div><%= author.name  %></div>
  <a href="/authors/<%= author.id %>">View</a>
  <a href="/authors/<%= author.id %>/edit">Edit</a>
  <%- include("../partials/deleteForm", { url: `/authors/${author.id}` }) %>
<% }) %>
